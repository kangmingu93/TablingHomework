<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TablingHomework" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/NotoSansTextViewStyle</item>
    </style>

    <style name="Theme.TablingHomework.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TablingHomework.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TablingHomework.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NotoSansTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="BottomNavigationViewStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationViewStyle.Active">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TabLayoutTitleStyle">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTitleStyleParent">
        <item name="android:fontFamily">@font/noto_sans_kr_bold</item>
    </style>

    <style name="CollapsingTitleStyle" parent="ToolbarTitleStyleParent">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ExpandedTitleStyle" parent="ToolbarTitleStyleParent">
        <item name="android:textSize">22sp</item>
    </style>

</resources>